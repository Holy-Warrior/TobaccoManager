<Page x:Class="TobaccoManager.Views.Dashboard.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TobaccoManager.Views.Dashboard"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="Dashboard">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#ffedb8" BorderThickness="2" CornerRadius="5" Margin="5">
          <!-- Navigation -->
          <DockPanel LastChildFill="False">
            <!-- Top Elements -->
            <StackPanel DockPanel.Dock="Top" > <!-- Do not touch me, i scream ERROR !!! -->
              <Label Content="My Username" FontSize="18" FontWeight="Bold" Margin="10"/>
              <Button Content="Dashboard" Margin="10" Click="Dashboard_Click" />
              <Button Content="Products" Margin="10" Background="White" Click="Products_Click" />
              <Button Content="Calendar" Margin="10" Background="White" Click="Calendar_Click" />
              <Button Content="Profile" Margin="10" Background="White" Click="Profile_Click" />
            </StackPanel>
            <!-- Bottom Elements -->
            <Button DockPanel.Dock="Bottom" Content="Logout" Margin="10" Background="LightCoral" Click="LogoutButton_Click" />
          </DockPanel>
        </Border>

        <Border Grid.Column="1"  Margin="5">
          <!-- main content area -->
          <Grid>
              <TextBlock Text="Welcome to the Dashboard" FontSize="24" FontWeight="Bold" />
          </Grid>
        </Border>
    </Grid>
</Page>
