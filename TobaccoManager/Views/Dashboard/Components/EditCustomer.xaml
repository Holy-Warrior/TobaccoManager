<Window x:Class="TobaccoManager.Views.Dashboard.Components.EditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TobaccoManager.Views.Dashboard.Components"
        mc:Ignorable="d"
        Title="EditCustomer" Height="335" Width="500">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Edit Customer" FontSize="24" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="20,0,0,0">


            <TextBlock Text="Name" Margin="0,10,0,0"/>
            <TextBox x:Name="NameBox" Width="Auto"/>

            <TextBlock Text="Phone" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox" Width="Auto" Text=""/>

            <TextBlock Text="Address" Margin="0,10,0,0"/>
            <TextBox x:Name="AddressBox" Width="Auto" Height="50" TextWrapping="Wrap"/>

            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Cancel"
                    Style="{StaticResource CancelButton}"
                    Width="Auto" x:Name="CancelButton"
                    Click="CancelButton_Click" IsCancel="True"/>
                
                <Button Grid.Column="1" Content="Add Agreement"
                    Width="Auto" x:Name="AddAgreementButton"
                        Margin="10,0,10,0"
                    Click="AddAgreementButton_Click" IsEnabled="False"/>

                <Button Grid.Column="2" Content="Edit Customer"
                    Width="Auto" x:Name="EditCustomerButton"
                    Click="EditCustomerButton_Click" IsDefault="True"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
