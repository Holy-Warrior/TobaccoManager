<Window x:Class="TobaccoManager.Views.Dashboard.Components.AddCustomers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TobaccoManager.Views.Dashboard.Components"
        mc:Ignorable="d"
        Title="AddCustomers" Height="360" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="30,10,30,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Add Customer" FontSize="24" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="20,0,0,0">


            <TextBlock Text="Name" Margin="0,10,0,0"/>
            <TextBox x:Name="NameBox" Width="Auto" />

            <TextBlock Text="Phone" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox" Width="Auto" />

            <TextBlock Text="Address" Margin="0,10,0,0"/>
            <TextBox x:Name="AddressBox" Width="Auto" Height="50" TextWrapping="Wrap"/>

            <!-- Adding a checkbox for prompting to add agreement which is checked by default -->
            <CheckBox x:Name="AddAgreementCheckBox" 
                      Content="Prompt to add agreement upon adding customer" 
                      Margin="0,10,0,0" IsChecked="True"/>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Cancel"
                    Style="{StaticResource CancelButton}"
                    Width="Auto" x:Name="CancelButton"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click" IsCancel="True"/>

                <Button Grid.Column="1" Content="Add Customer"
                    Width="Auto" x:Name="AddCustomerButton"
                    Click="AddCustomerButton_Click" IsDefault="True"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
