<Window x:Class="TobaccoManager.Views.Dashboard.Components.AddProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TobaccoManager.Views.Dashboard.Components"
        mc:Ignorable="d"
        Title="Add Stock" Height="400" Width="530" WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Add Stock" FontSize="24" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="20,0,0,0">
            <TextBlock Text="Price" Margin="0,10,0,0"/>
            <TextBox x:Name="PriceBox" Width="400" HorizontalAlignment="Left"/>

            <TextBlock Text="Date Received (yyyy-MM-dd)" Margin="0,10,0,0"/>
            <TextBox x:Name="DateReceivedBox" Width="400" HorizontalAlignment="Left"/>

            <TextBlock Text="Date Paid (yyyy-MM-dd, optional)" Margin="0,10,0,0"/>
            <TextBox x:Name="DatePaidBox" Width="400" HorizontalAlignment="Left"/>

            <Button Content="Add Stock" Margin="0,40,0,0" Width="200" Height="30" HorizontalAlignment="Left" Click="AddStock_Click"/>
        </StackPanel>
    </Grid>
</Window>
