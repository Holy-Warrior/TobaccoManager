<Page x:Class="TobaccoManager.Views.Auth.SecurityQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TobaccoManager.Views.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Background="#fffbe6"
      Title="SecurityQuestion">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">

        <!-- Title -->
        <TextBlock Text="Add Security Question"
           FontSize="24"
           Margin="0,0,0,20"/>

        <!-- Username -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Username" FontSize="16" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Security Question -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Security Question:"/>
            <ComboBox x:Name="SecurityQuestionComboBox" Width="220">
                <ComboBoxItem Content="What is your favorite color?"/>
                <ComboBoxItem Content="What is your first school?"/>
                <ComboBoxItem Content="What was the name of your first pet?"/>
                <ComboBoxItem Content="What is your mother’s maiden name?" />
                <ComboBoxItem Content="What is your favorite movie?" />
            </ComboBox>
        </StackPanel>

        <!-- Answer -->
        <StackPanel Margin="0,0,0,12">
            <TextBlock Text="Answer:"/>
            <TextBox x:Name="SecurityAnswerBox" Width="220" KeyDown="SecurityAnswerBox_KeyDown"/>
        </StackPanel>

        <!-- Complete Signup Button -->
        <Button Content="Complete Signup"
        Width="120"
        Click="CompleteSignupButton_Click"/>
    </StackPanel>
</Page>
