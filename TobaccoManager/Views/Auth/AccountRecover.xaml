<Page x:Class="TobaccoManager.Views.Auth.AccountRecover"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TobaccoManager.Views.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="AccountRecover" Background="#fffbe6">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">

        <!-- Title -->
        <TextBlock Text="Recover Account"
               FontSize="24"
               Margin="0,0,0,20"/>

        <!-- Username -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="220"/>
        </StackPanel>

        <!-- Verify Button -->
        <Button Content="Verify"
            Width="100"
            Click="VerifyUsername_Click"
            Margin="0,0,0,10"/>

        <!-- Security Question -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Security Question:"/>
            <TextBlock x:Name="StoredQuestion" Width="220" Margin="10,0,0,0"/>
            <TextBox x:Name="AnswerBox" Width="220" IsEnabled="False"/>
        </StackPanel>

        <!-- Recover Button -->
        <Button Content="Recover"
            x:Name="RecoverButton"
            Width="100"
            Click="Recover_Click"
            IsEnabled="False"/>

        <!-- Back to Login -->
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,0">
            <TextBlock Text="Remembered your account? "
                   VerticalAlignment="Center"/>
            <Button Content="Login"
                Click="BackToLogin_Click"
                Style="{StaticResource HyperlinkButton}"/>
        </StackPanel>
    </StackPanel>

</Page>
