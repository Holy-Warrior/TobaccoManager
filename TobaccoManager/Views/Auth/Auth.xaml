<Page x:Class="TobaccoManager.Views.Auth.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TobaccoManager.Views.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1024"
      Title="Auth" Background="White">

    <Border BorderBrush="#feeeb9" BorderThickness="2" CornerRadius="5" Margin="100">
        <Grid  Background="#ffedb8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="412*"/>
                <ColumnDefinition Width="412*"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Margin="30,0,30,0">
                <Image Source="/Views/Auth/leaf.png" Width="200" Height="200"/>
                <TextBlock Text="Tobacco Manager" HorizontalAlignment="Center"
                           FontSize="24" Margin="0,30,0,30"/>
            </StackPanel>

            <Frame x:Name="AuthFrame"
                   NavigationUIVisibility="Hidden"
                   Grid.Column="1"
                   />

        </Grid>
    </Border>
</Page>
