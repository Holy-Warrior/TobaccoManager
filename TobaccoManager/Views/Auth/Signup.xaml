<Page x:Class="TobaccoManager.Views.Auth.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TobaccoManager.Views.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="200"
      Title="Sign up" Background="#fffbe6">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">

        <TextBlock Text="Sign up Form" FontSize="24" Margin="0,0,0,30" HorizontalAlignment="Center"/>

        <!-- Username, Email, Password, ConfirmPassword -->
        <TextBlock Text="Username"/>
        <TextBox x:Name="UsernameBox" Width="220" Margin="0,0,0,10"
                 KeyDown="UsernameBox_KeyDown"/>
        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailBox" Width="220" Margin="0,0,0,10"
                 KeyDown="EmailBox_KeyDown"/>
        <TextBlock Text="Password"/>
        <PasswordBox x:Name="PasswordBox" Width="220" Margin="0,0,0,10"
                     KeyDown="PasswordBox_KeyDown"/>
        <TextBlock Text="Confirm Password"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Width="220" Margin="0,0,0,20"
                     KeyDown="ConfirmPasswordBox_KeyDown"/>

        <!-- Signup Button -->
        <Button Content="Sign up" Click="Signup_Click" Width="100"/>

        <!-- Navigation Login -->
        <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
            <TextBlock Text="Already have an account? " VerticalAlignment="Center" />
            <Button Content="Login" Click="Login_Click" VerticalAlignment="Center" Style="{StaticResource HyperlinkButton}"/>
        </StackPanel>


    </StackPanel>
</Page>
